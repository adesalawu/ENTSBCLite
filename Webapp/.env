# Application Configuration
APP_NAME=DirectRoutingAPI
APP_ENV=development
APP_DEBUG=True
APP_PORT=8000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=direct_routing
DB_USER=your_db_user
DB_PASSWORD=your_secure_password

# Azure App Registration
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# Ribbon SBC Configuration
RIBBON_SBC_USER=your_sbc_username
RIBBON_SBC_PASSWORD=your_sbc_password
RIBBON_SBC_API_URL=https://your-sbc-api-endpoint.com

# Logging Configuration
LOG_LEVEL=INFO

# Secret Key for Authentication
SECRET_KEY=your_random_secret_key_for_jwt

# Token Expiry Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Other Configurations
DEFAULT_REGION=us-east-1
MAX_CHANNELS=100
